<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dw.gameshop_mybatis.mapper.BoardMapper">
    <resultMap id="BoardWithUserMap" type="Board">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="createdDate" column="created_date" />
        <result property="modifiedDate" column="modified_date" />
        <result property="isActive" column="is_active" />

        <association property="user" javaType="User">
            <id property="userName" column="user_name" />
            <result property="email" column="email" />
            <result property="realName" column="real_name" />
            <result property="createdAt" column="created_at" />

            <association property="authority" javaType="Authority">
                <id property="authorityName" column="authority_name" />
            </association>
        </association>
    </resultMap>

    <select id="getBoardById" resultMap="BoardWithUserMap"></select>

    <select id="getAllBoards" resultMap="BoardWithUserMap"></select>

    <insert id="saveBoard" useGeneratedKeys="true" keyProperty="id">
        
    </insert>

    <update id="updateBoard"></update>

    <delete id="deleteBoard"></delete>
</mapper>